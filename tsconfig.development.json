{
  "include": [
    "./source/**/*"
  ],
  "exclude": [
    "./node_modules/**/*",
    "./build/**/*",
    "./tests/**/*"
  ],
  "compilerOptions": {
    "sourceMap": true,
    "target": "es2022",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  }
}